    <script>
        // Fungsi untuk mengirim pesan WhatsApp
        function orderViaWhatsApp() {
            const phoneNumber = "6285946443438"; // Ganti dengan nomor WhatsApp bisnis
            const message = encodeURIComponent("Halo, saya ingin pesan Nilkgoat. Mohon info lebih lanjut.");
            window.open(`https://wa.me/${phoneNumber}?text=${message}`, '_blank');
        }
        
        function orderViaShopee() {
            window.open(`https://id.shp.ee/kwWtuLx`, '_blank');
        }

        // Tambahkan event listener ke tombol
        document.getElementById('orderButton').addEventListener('click', orderViaWhatsApp);
        document.getElementById('orderButtonsho').addEventListener('click', orderViaShopee);
        document.getElementById('orderButton2').addEventListener('click', orderViaWhatsApp);
        document.getElementById('orderButtonsho2').addEventListener('click', orderViaShopee);
        
        // Fitur Countdown Timer (opsional)
        const countdownDate = new Date();
        countdownDate.setHours(countdownDate.getHours() + 24); // Promo berlaku 24 jam
        
        function updateCountdown() {
            const now = new Date().getTime();
            const distance = countdownDate - now;
            
            const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
            const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
            const seconds = Math.floor((distance % (1000 * 60)) / 1000);
            
            document.getElementById('countdown').innerHTML = 
                `Promo berakhir dalam: ${hours} jam ${minutes} menit ${seconds} detik`;
        }
        
        // Jalankan countdown setiap 1 detik
        setInterval(updateCountdown, 1000);
        updateCountdown(); // Inisialisasi awal
    </script>
